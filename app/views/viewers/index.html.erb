<div class="page-header">
  <h1>
    Viewers
    <a href="/viewers/new" class="btn btn-lg btn-success">New Viewer</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Restaurant</th>
        <th>Actions</th>
      </tr>

      <% @viewers.each do |viewer| %>
      <tr>
        <td><%= viewer.user.email %></td>
        <td><%= viewer.restaurant_id %></td>
        <td>
          <a href="/viewers/<%= viewer.id %>" class="btn btn-primary">Show</a>
          <a href="/viewers/<%= viewer.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_viewer/<%= viewer.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
